# Jac Hospital Login System
def check_login(user, passw) {
	if user == "doctor1" && passw == "pass123" {
		return "doctor1";
	}
	if user == "nurse2" && passw == "nurse456" {
		return "nurse2";
	}
	if user == "admin" && passw == "admin789" {
		return "admin";
	}
	return "";
}

with entry {
	print("ğŸ¥ Welcome to Hospital Management System Login ğŸ¥");
	username = input("Enter your username: ");
	password = input("Enter your password: ");
	result = check_login(username, password);
	if result != "" {
		print("\nâœ… Login successful! Welcome, " + result + ".\n");
		print("You now have access to the hospital system dashboard...");
	} else {
		print("\nâŒ Login failed! Invalid username or password.\n");
	}
}
